                    </Grid>
                </Button>
            </StackPanel>
            <ListBox Grid.Row="1" Name="OrdersList">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="OrderId" Text="{Binding Id}" Visibility="Hidden"/>
                                <Label Content="Name"/>
                                <TextBlock x:Name="DealersName" Text="{Binding DealerName}"/>
                                <Label Content="Date"/>
                                <TextBlock x:Name="OrderNumber" Text="{Binding OrderNumber}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Label Content="Name"/>
                                <TextBlock x:Name="OrderTotal" Text="{Binding OrderTotal}"/>
                                <Label Content="Date"/>
                                <TextBlock x:Name="DateTime" Text="{Binding DateTime}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
