<Window x:Class="WPFCashier.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCashier"
        mc:Ignorable="d"
        xmlns:p = "clr-namespace:WPFCashier.Properties"
        Title="{x:Static p:Resources.SettingsFormTitle}" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="{x:Static p:Resources.Language}" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="LanguagesTextBox" HorizontalAlignment="Left" Margin="90,40,0,0" Width="150" Height="26" VerticalAlignment="Top"/>
    </Grid>
</Window>
