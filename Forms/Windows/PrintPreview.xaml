<Window x:Class="WPFCashier.PrintPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:WPFCashier"
        mc:Ignorable="d"
        Title="PrintReport" Height="600" Width="500" Loaded="Window_Loaded" ResizeMode="NoResize">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        <WindowsFormsHost Name="windowsFormsHost" Margin="0,0,-0.4,0" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <rv:ReportViewer x:Name="reportviewer" />
        </WindowsFormsHost>
    </Grid>
</Window>
