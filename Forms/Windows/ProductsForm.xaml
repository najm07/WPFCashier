        </Grid>
        <ListView Name="ItemList" Margin="0"  Grid.Row="1" UseLayoutRounding="False">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static p:Resources.Clear}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{x:Static p:Resources.Id}" Width="50"  DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="{x:Static p:Resources.Name}" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="{x:Static p:Resources.Category}" Width="100" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="{x:Static p:Resources.Quantity}" Width="80" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="{x:Static p:Resources.BuyPrice}" Width="80" DisplayMemberBinding="{Binding BuyPrice}"/>
                    <GridViewColumn Header="{x:Static p:Resources.SellPrice}" Width="120" DisplayMemberBinding="{Binding SellPrice}"/>
                    <GridViewColumn Header="{x:Static p:Resources.RetailSellPrice}" Width="120" DisplayMemberBinding="{Binding RetailSellPrice}"/>
                    <GridViewColumn Header="{x:Static p:Resources.Discount}" Width="120" DisplayMemberBinding="{Binding Discount}"/>
                    <GridViewColumn Header="{x:Static p:Resources.Date}" Width="120" DisplayMemberBinding="{Binding Date}"/>
                </GridView>
            </ListView.View>
        </ListView>

